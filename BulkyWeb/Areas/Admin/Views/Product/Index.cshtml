@model List<ProductModel>


@{

    <div class="container card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">Product List</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <section class="container">
                <div class="row pb-3">
                    <div class="col-6">
                    </div>
                    <div class="col-6 text-end">
                        <a class="btn btn-primary" asp-controller="product" asp-action="CreateProduct">
                            <i class="bi bi-plus-circle"></i> Create New Product
                        </a>
                    </div>
                </div>

                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                Product Name
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Author
                            </th>
                            <th>
                                ISBN
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var obj in Model.OrderBy(u => u.Id))
                        {
                            <tr>
                                <td>@obj.Title</td>
                                <td>@obj.Description</td>
                                <td>@obj.Author</td>
                                <td>@obj.ISBN</td>

                                <td>
                                    <div class="w-75 btn-group" role="group">
                                        <a asp-controller="Product" asp-action="EditProduct" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <a asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                            <i class="bi bi-trash-fill"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </section>
        </div>
    </div>


}